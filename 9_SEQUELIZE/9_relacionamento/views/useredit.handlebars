<h1> Editando:{{user.name}}</h1>
<form action="/users/update" method="POST" class="from">
 <input type="hidden" name="id" value="{{user.id}}">
    <div class="from-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Informe o nome do Usuário:" value="{{user.name}}">
    </div>
    <div class="from-control">
        <label for="occupation">Profissão:</label>
        <input type="text" name="occupation" placeholder="Informe a profissão do Usuário:" value="{{user.occupation}}" > 
    </div>
    <div class="from-control  form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
          <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Enviar promoções:</label>
    </div>
    <input type="submit" value="Editar">
</form>